<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters ="clr-namespace:MauiApp3_teoria4.MVVM.Converter"
             x:Class="MauiApp3_teoria4.MVVM.View.PersonView"
             Title="PersonView">

    <ContentPage.Resources>
        <converters:BoolConverter x:Key="boolConverter" />
    </ContentPage.Resources>
    
    
    
    <VerticalStackLayout>
       

        <Label FontSize="50" Text="{Binding Person.Name}"/>
        <Slider Maximum="100" Minimum="0" Value="{Binding Person.Age}" />
        <Switch IsToggled="{Binding Person.Married,Converter={StaticResource boolConverter}}" />
        <DatePicker Date="{Binding Person.BirthDate}" />
        <Entry Text="{Binding Person.Weight}" />
        <TimePicker Time="{Binding Person.Lunchtime}" />

        

    </VerticalStackLayout>
</ContentPage>
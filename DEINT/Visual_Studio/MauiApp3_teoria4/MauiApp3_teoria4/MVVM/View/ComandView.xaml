<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3_teoria4.MVVM.View.ComandView"
             Title="ComandView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button Text="HOLA" Command="{Binding ClickCommand}"/>

        <Entry x:Name="ent" />
        <Button x:Name="boton" Text="click me" Command="{Binding ClickCommand}" CommandParameter="{Binding Source={x:Reference boton}, Path=Text}"/>
        <Button x:Name="boton1" Text="click me" Command="{Binding ClickCommand}" CommandParameter="4" />
        <Button x:Name="boton2" Text="click me" Command="{Binding ClickCommand}" CommandParameter="{Binding Source={x:Reference ent}, Path=Text}" />


    </VerticalStackLayout>
</ContentPage>
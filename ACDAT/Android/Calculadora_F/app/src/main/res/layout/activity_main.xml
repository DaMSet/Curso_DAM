    <TextView
        android:id="@+id/Pantalla"
        android:layout_width="349dp"
        android:layout_height="116dp"
        android:autoSizeTextType="none"
        android:background="@android:drawable/dialog_frame"
        android:gravity="end"
        android:shadowColor="#FF0000"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="268dp"
        android:layout_height="404dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pantalla">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btnC"
                android:layout_width="89dp"
                android:layout_height="64dp"
                android:background="@android:drawable/alert_dark_frame"

                android:backgroundTint="@android:color/holo_red_dark"
                android:text="C"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnPORCENTAJE"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:text="%"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnDIVISION"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:text="/"
                app:iconTint="@color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="7"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="8"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="9"
                app:iconTint="@color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="4"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="5"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="6"
                app:iconTint="@color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="1"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="2"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="89dp"
                android:layout_height="64dp"

                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="3"
                app:iconTint="@color/black" />

        </TableRow>


        <TableRow
            android:layout_width="266dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text="0"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnCOMA"
                android:layout_width="89dp"
                android:layout_height="64dp"
                android:background="@android:drawable/alert_dark_frame"
                android:backgroundTint="@color/verde"
                android:text=","
                app:iconTint="@color/black" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="82dp"
        android:layout_height="384dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="65dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tableLayout2"
        app:layout_constraintTop_toBottomOf="@+id/Pantalla">

        <Button
            android:id="@+id/btnX"
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:background="@android:drawable/alert_dark_frame"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="X"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/btnMENOS"
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:background="@android:drawable/alert_dark_frame"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="-"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/btnMAS"
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:background="@android:drawable/alert_dark_frame"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="+"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/btnINTRO"
            android:layout_width="match_parent"
            android:layout_height="127dp"

            android:layout_span="2"
            android:background="@android:drawable/alert_dark_frame"
            android:backgroundTint="@color/material_dynamic_primary60"
            android:text="="
            app:iconTint="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
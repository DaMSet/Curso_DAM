<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="437dp"
        android:text="Hola y Adios!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.378"
        tools:text="@string/strSaludo" />

    <Button
        android:id="@+id/btnSaludar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="32dp"
        android:onClick="onClick"
        android:text="@string/botonSaludar"
        app:layout_constraintBottom_toTopOf="@+id/txtSaludo"
        app:layout_constraintEnd_toEndOf="@+id/txtSaludo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="167dp"
        android:onClick="onClick"
        android:text="@string/strBtnDespedir"
        app:layout_constraintBottom_toTopOf="@+id/txtSaludo"
        app:layout_constraintStart_toStartOf="@+id/btnSaludar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57" />

</androidx.constraintlayout.widget.ConstraintLayout>